      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Apoorv-Awasthi-23/smart-grid.git"
  },
  "bugs": {
    "url": "https://github.com/Apoorv-Awasthi-23/smart-grid/issues"
  },
  "homepage": "https://github.com/Apoorv-Awasthi-23/smart-grid#readme",
  "keywords": [
    "react",
    "smartgrid",
    "data-grid",
    "react-table",
    "table",
    "virtual-scroll",
    "pagination",
    "component-library"
